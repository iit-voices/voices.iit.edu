var bounds = new OpenLayers.Bounds();
bounds.extend(vothL36);
markers.addMarker(vothL36_icon);
    addMarker(vothL36, popupClass, "", true, false, false);
    map_id_vothL36.setCenter(vothL36, 4); 
        
});
</script>
</div>
