                            <style type="text/css">
.olLayerDiv{
width:250px !important;
height:250px !important;
}
</style>
<script type="text/javascript">
$(document).ready(function(){
    var map_id_vothC3 = new OpenLayers.Map('map_vothC3', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothC3.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothC3.addLayer(markers);
map_id_vothC3.zoomToMaxExtent();

                        var lat_3 = 48.350000;
                        var lon_3 = 10.900000;
                        var vothC3 = new OpenLayers.LonLat(lon_3, lat_3);
            vothC3_icon = new OpenLayers.Marker(vothC3);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothC3);
markers.addMarker(vothC3_icon);
    addMarker(vothC3, popupClass, "", true, false, false);
    map_id_vothC3.setCenter(vothC3, 4); 
        
});
</script>
</div>
