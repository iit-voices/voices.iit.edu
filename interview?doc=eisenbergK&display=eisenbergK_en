   map_id_vothL78.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL78.addLayer(markers);
map_id_vothL78.zoomToMaxExtent();

                        var lat_11 = 51.066700;
                        var lon_11 = 21.066700;
                        var vothL78 = new OpenLayers.LonLat(lon_11, lat_11);
            vothL78_icon = new OpenLayers.Marker(vothL78);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL78);
markers.addMarker(vothL78_icon);
    addMarker(vothL78, popupClass, "", true, false, false);
    map_id_vothL78.setCenter(vothL78, 4); 
        
});
</script>
