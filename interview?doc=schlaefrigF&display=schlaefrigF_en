                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothC110.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothC110.addLayer(markers);
map_id_vothC110.zoomToMaxExtent();

                        var lat_1 = 50.500000;
                        var lon_1 = 14.150000;
                        var vothC110 = new OpenLayers.LonLat(lon_1, lat_1);
