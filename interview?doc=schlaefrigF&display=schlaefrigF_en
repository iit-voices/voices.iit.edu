    var map_id_vothL298 = new OpenLayers.Map('map_vothL298', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL298.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL298.addLayer(markers);
map_id_vothL298.zoomToMaxExtent();

                        var lat_12 = 50.100000;
                        var lon_12 = 14.433300;
                        var vothL298 = new OpenLayers.LonLat(lon_12, lat_12);
            vothL298_icon = new OpenLayers.Marker(vothL298);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL298);
markers.addMarker(vothL298_icon);
    addMarker(vothL298, popupClass, "", true, false, false);
    map_id_vothL298.setCenter(vothL298, 4); 
        
});
</script>
