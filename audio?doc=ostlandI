            <h1>David P. Boder Interviews Isaac Ostland; September 13, 1946; Hénonville, France</h1>
                        <ul class="transcripts">
    <li class="interview_home">
        <a href="interviewee?doc=ostlandI">
            Interview homepage
        </a>
        //
    </li>
        <li class="english_translation">
        <a href="interview?doc=ostlandI&display=ostlandI_en">
                            English translation
                    </a>
        //
    </li>
        <li class="audio">
        <a href="audio?doc=ostlandI">
            Audio player
        </a>
    </li>
    </ul>            <div class="audio_player">
                <object id="player" classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" width="800" height="600">
                    <param name="movie" value="swf/voices_player.swf" />
                    <param name="flashvars" value="audioURL=ostlandI_9-125B_9-126A&XMLduration=2935.296" />
                    <!--[if !IE]>-->
                    <object type="application/x-shockwave-flash" data="swf/voices_player.swf" width="800" height="600">
                        <param name="movie" value="swf/voices_player.swf" />
