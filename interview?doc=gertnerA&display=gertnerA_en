/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL313.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL313.addLayer(markers);
map_id_vothL313.zoomToMaxExtent();

                        var lat_16 = 51.116667;
                        var lon_16 = 17.033333;
                        var vothL313 = new OpenLayers.LonLat(lon_16, lat_16);
            vothL313_icon = new OpenLayers.Marker(vothL313);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL313);
markers.addMarker(vothL313_icon);
    addMarker(vothL313, popupClass, "", true, false, false);
    map_id_vothL313.setCenter(vothL313, 4); 
        
});
</script>
