                        <p class="placename">
                Oradea Ghetto<br /><span class="alt">(Grosswardein Ghetto)</span>
            </p>
                                    <p class="municipality">
                <strong>Location:</strong>
                Oradea, Romania<br />
                            </p>
                            <div>
                Established in the first week of May 1944, this ghetto became the second-largest in Hungary (within the borders established in 1940) but lasted only a month before its inhabitants were transported to the extermination camp at Auschwitz.
            </div>
                            <style type="text/css">
.olLayerDiv{
width:250px !important;
height:250px !important;
}
</style>
<script type="text/javascript">
$(document).ready(function(){
    var map_id_vothC85 = new OpenLayers.Map('map_vothC85', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothC85.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothC85.addLayer(markers);
map_id_vothC85.zoomToMaxExtent();

                        var lat_1 = 47.050000;
                        var lon_1 = 21.916700;
                        var vothC85 = new OpenLayers.LonLat(lon_1, lat_1);
            vothC85_icon = new OpenLayers.Marker(vothC85);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothC85);
markers.addMarker(vothC85_icon);
    addMarker(vothC85, popupClass, "", true, false, false);
    map_id_vothC85.setCenter(vothC85, 4); 
        
});
</script>
