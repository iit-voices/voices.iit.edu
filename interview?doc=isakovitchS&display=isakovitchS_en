            <br />
                    </p>
    <style type="text/css">
.olLayerDiv{
width:250px !important;
height:250px !important;
}
</style>
<script type="text/javascript">
$(document).ready(function(){
    var map_id_vothL110 = new OpenLayers.Map('map_vothL110', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL110.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL110.addLayer(markers);
map_id_vothL110.zoomToMaxExtent();

                        var lat_9 = 47.933300;
                        var lon_9 = 23.883300;
                        var vothL110 = new OpenLayers.LonLat(lon_9, lat_9);
            vothL110_icon = new OpenLayers.Marker(vothL110);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL110);
markers.addMarker(vothL110_icon);
    addMarker(vothL110, popupClass, "", true, false, false);
    map_id_vothL110.setCenter(vothL110, 4); 
        
});
</script>
