/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL269.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL269.addLayer(markers);
map_id_vothL269.zoomToMaxExtent();

                        var lat_22 = 36.150000;
                        var lon_22 = -5.350000;
                        var vothL269 = new OpenLayers.LonLat(lon_22, lat_22);
            vothL269_icon = new OpenLayers.Marker(vothL269);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL269);
markers.addMarker(vothL269_icon);
    addMarker(vothL269, popupClass, "", true, false, false);
    map_id_vothL269.setCenter(vothL269, 4); 
        
});
</script>
