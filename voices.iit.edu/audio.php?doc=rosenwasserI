_jsready = true;
var return_val;
switch (String(type)){
        case "transcription":
        return_val = transcription.interview;
        break;
            case "english_translation":
        return_val = english_translation.interview;
        break;
    }
return return_val;
}
function js_ready(){
    return _jsready;
}
