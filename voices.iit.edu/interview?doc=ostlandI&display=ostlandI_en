$(document).ready(function(){
    var map_id_vothL165 = new OpenLayers.Map('map_vothL165', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL165.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL165.addLayer(markers);
map_id_vothL165.zoomToMaxExtent();

                        var lat_8 = 55.966700;
                        var lon_8 = 22.266700;
                        var vothL165 = new OpenLayers.LonLat(lon_8, lat_8);
            vothL165_icon = new OpenLayers.Marker(vothL165);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL165);
markers.addMarker(vothL165_icon);
    addMarker(vothL165, popupClass, "", true, false, false);
    map_id_vothL165.setCenter(vothL165, 4); 
        
});
