/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL1.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL1.addLayer(markers);
map_id_vothL1.zoomToMaxExtent();

                        var lat_2 = 48.216700;
                        var lon_2 = 16.366700;
                        var vothL1 = new OpenLayers.LonLat(lon_2, lat_2);
            vothL1_icon = new OpenLayers.Marker(vothL1);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL1);
markers.addMarker(vothL1_icon);
    addMarker(vothL1, popupClass, "", true, false, false);
    map_id_vothL1.setCenter(vothL1, 4); 
        
});
