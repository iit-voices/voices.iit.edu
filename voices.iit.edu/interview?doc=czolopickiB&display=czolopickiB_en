 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL15.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL15.addLayer(markers);
map_id_vothL15.zoomToMaxExtent();

                        var lat_1 = 48.866700;
                        var lon_1 = 2.333300;
                        var vothL15 = new OpenLayers.LonLat(lon_1, lat_1);
            vothL15_icon = new OpenLayers.Marker(vothL15);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL15);
markers.addMarker(vothL15_icon);
    addMarker(vothL15, popupClass, "", true, false, false);
    map_id_vothL15.setCenter(vothL15, 4); 
        
});
</script>
