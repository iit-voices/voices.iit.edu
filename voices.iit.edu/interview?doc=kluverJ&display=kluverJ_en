<script type="text/javascript">
$(document).ready(function(){
    var map_id_vothL182 = new OpenLayers.Map('map_vothL182', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL182.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL182.addLayer(markers);
map_id_vothL182.zoomToMaxExtent();

                        var lat_6 = 50.833300;
                        var lon_6 = 12.916700;
                        var vothL182 = new OpenLayers.LonLat(lon_6, lat_6);
            vothL182_icon = new OpenLayers.Marker(vothL182);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL182);
markers.addMarker(vothL182_icon);
    addMarker(vothL182, popupClass, "", true, false, false);
    map_id_vothL182.setCenter(vothL182, 4); 
        
});
</script>
