                                <div class="map widget vothL113">
    <p>
        <b>
            <a href="#close" class="hide">
                [x] click to close
            </a>
        </b>
    </p>
    <div id="map_vothL113" style="width: 250px; height: 250px;"></div>
            <p class="municipality">
            Saratov, Russia
            <br />
                    </p>
    <style type="text/css">
.olLayerDiv{
width:250px !important;
height:250px !important;
}
</style>
<script type="text/javascript">
$(document).ready(function(){
    var map_id_vothL113 = new OpenLayers.Map('map_vothL113', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL113.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL113.addLayer(markers);
map_id_vothL113.zoomToMaxExtent();

                        var lat_5 = 51.566700;
                        var lon_5 = 46.033300;
                        var vothL113 = new OpenLayers.LonLat(lon_5, lat_5);
            vothL113_icon = new OpenLayers.Marker(vothL113);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL113);
markers.addMarker(vothL113_icon);
    addMarker(vothL113, popupClass, "", true, false, false);
    map_id_vothL113.setCenter(vothL113, 4); 
        
});
</script>
</div>
