    </p>
    <div id="map_vothL135" style="width: 250px; height: 250px;"></div>
            <p class="municipality">
            Krak&#195;w, Poland
            <br />
                    </p>
    <style type="text/css">
.olLayerDiv{
width:250px !important;
height:250px !important;
}
</style>
<script type="text/javascript">
$(document).ready(function(){
    var map_id_vothL135 = new OpenLayers.Map('map_vothL135', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL135.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL135.addLayer(markers);
map_id_vothL135.zoomToMaxExtent();

                        var lat_23 = 50.050000;
                        var lon_23 = 19.916700;
                        var vothL135 = new OpenLayers.LonLat(lon_23, lat_23);
            vothL135_icon = new OpenLayers.Marker(vothL135);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL135);
markers.addMarker(vothL135_icon);
    addMarker(vothL135, popupClass, "", true, false, false);
    map_id_vothL135.setCenter(vothL135, 4); 
        
});
</script>
