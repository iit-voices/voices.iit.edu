    bounds = new OpenLayers.Bounds();
                            var lat_1 = 60.000000;
                        var lon_1 = 47.000000;
                        vothL223 = new OpenLayers.LonLat(lon_1, lat_1);
            bounds.extend(vothL223);                        vothL223_icon = new OpenLayers.Marker(vothL223)
            markers.addMarker(vothL223_icon);
            var popupContentHTML = "";
                            popupContentHTML += '<p class="municipality"><a href="search_results?filter_by=&filter_value=vothL223">, Russia<br /></a></p>';
                        addMarker(vothL223, popupClass, popupContentHTML, true, true);
                                        var lat_2 = 45.200000;
                        var lon_2 = 0.733300;
                        vothL20 = new OpenLayers.LonLat(lon_2, lat_2);
