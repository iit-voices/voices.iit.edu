            markers.addMarker(vothL20_icon);
            var popupContentHTML = "";
                            popupContentHTML += '<p class="municipality"><a href="search_results?filter_by=&filter_value=vothL20">P&#195;rigueux, France<br /></a></p>';
                        addMarker(vothL20, popupClass, popupContentHTML, true, true);
                                                                                var lat_5 = 48.400000;
                        var lon_5 = 11.750000;
                        vothL224 = new OpenLayers.LonLat(lon_5, lat_5);
                        bounds.extend(vothL224);            vothL224_icon = new OpenLayers.Marker(vothL224)
            markers.addMarker(vothL224_icon);
