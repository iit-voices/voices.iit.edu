    map_id_vothC26.addLayer(markers);
map_id_vothC26.zoomToMaxExtent();

                        var lat_1 = 54.366700;
                        var lon_1 = 18.683300;
                        var vothC26 = new OpenLayers.LonLat(lon_1, lat_1);
            vothC26_icon = new OpenLayers.Marker(vothC26);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothC26);
markers.addMarker(vothC26_icon);
    addMarker(vothC26, popupClass, "", true, false, false);
    map_id_vothC26.setCenter(vothC26, 4); 
        
});
</script>
</div>
