            vothL218_icon = new OpenLayers.Marker(vothL218);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL218);
markers.addMarker(vothL218_icon);
    addMarker(vothL218, popupClass, "", true, false, false);
    map_id_vothL218.setCenter(vothL218, 4); 
        
});
</script>
</div>
