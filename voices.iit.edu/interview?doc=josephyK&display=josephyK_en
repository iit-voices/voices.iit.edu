   map_id_vothC60.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothC60.addLayer(markers);
map_id_vothC60.zoomToMaxExtent();

                        var lat_1 = 43.500000;
                        var lon_1 = 5.383333;
                        var vothC60 = new OpenLayers.LonLat(lon_1, lat_1);
            vothC60_icon = new OpenLayers.Marker(vothC60);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothC60);
markers.addMarker(vothC60_icon);
    addMarker(vothC60, popupClass, "", true, false, false);
    map_id_vothC60.setCenter(vothC60, 4); 
        
});
