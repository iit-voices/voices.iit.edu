 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothC82.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothC82.addLayer(markers);
map_id_vothC82.zoomToMaxExtent();

                        var lat_3 = 48.164440;
                        var lon_3 = 3.403330;
                        var vothC82 = new OpenLayers.LonLat(lon_3, lat_3);
            vothC82_icon = new OpenLayers.Marker(vothC82);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothC82);
markers.addMarker(vothC82_icon);
    addMarker(vothC82, popupClass, "", true, false, false);
    map_id_vothC82.setCenter(vothC82, 4); 
        
});
</script>
