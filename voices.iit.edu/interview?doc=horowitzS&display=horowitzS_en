         {layers: 'basic'}
     );
   map_id_vothL123.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL123.addLayer(markers);
map_id_vothL123.zoomToMaxExtent();

                        var lat_11 = 49.833300;
                        var lon_11 = 24.000000;
                        var vothL123 = new OpenLayers.LonLat(lon_11, lat_11);
            vothL123_icon = new OpenLayers.Marker(vothL123);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL123);
markers.addMarker(vothL123_icon);
    addMarker(vothL123, popupClass, "", true, false, false);
    map_id_vothL123.setCenter(vothL123, 4); 
        
});
</script>
