    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL105.addLayer(markers);
map_id_vothL105.zoomToMaxExtent();

                        var lat_18 = 50.333300;
                        var lon_18 = 18.666700;
                        var vothL105 = new OpenLayers.LonLat(lon_18, lat_18);
            vothL105_icon = new OpenLayers.Marker(vothL105);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL105);
markers.addMarker(vothL105_icon);
    addMarker(vothL105, popupClass, "", true, false, false);
    map_id_vothL105.setCenter(vothL105, 4); 
        
});
