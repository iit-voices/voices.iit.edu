                        var lon_6 = 22.050000;
                        var vothL70 = new OpenLayers.LonLat(lon_6, lat_6);
            vothL70_icon = new OpenLayers.Marker(vothL70);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL70);
markers.addMarker(vothL70_icon);
    addMarker(vothL70, popupClass, "", true, false, false);
    map_id_vothL70.setCenter(vothL70, 4); 
        
});
</script>
</div>
                                <div class="map widget vothL132">
    <p>
        <b>
            <a href="#close" class="hide">
                [x] click to close
            </a>
        </b>
    </p>
    <div id="map_vothL132" style="width: 250px; height: 250px;"></div>
            <p class="municipality">
            Budapest, Hungary
            <br />
                    </p>
    <style type="text/css">
.olLayerDiv{
width:250px !important;
height:250px !important;
}
</style>
<script type="text/javascript">
$(document).ready(function(){
    var map_id_vothL132 = new OpenLayers.Map('map_vothL132', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL132.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL132.addLayer(markers);
map_id_vothL132.zoomToMaxExtent();

                        var lat_7 = 47.500000;
                        var lon_7 = 19.050000;
                        var vothL132 = new OpenLayers.LonLat(lon_7, lat_7);
