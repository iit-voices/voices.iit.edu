markers.addMarker(vothL126_icon);
    addMarker(vothL126, popupClass, "", true, false, false);
    map_id_vothL126.setCenter(vothL126, 4); 
        
});
</script>
</div>
                                <div class="map widget vothL283">
    <p>
        <b>
            <a href="#close" class="hide">
                [x] click to close
            </a>
        </b>
    </p>
    <div id="map_vothL283" style="width: 250px; height: 250px;"></div>
            <p class="municipality">
            Piraeus, Greece
            <br />
                    </p>
    <style type="text/css">
