         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothC4.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothC4.addLayer(markers);
map_id_vothC4.zoomToMaxExtent();

                        var lat_1 = 50.033300;
                        var lon_1 = 19.233300;
                        var vothC4 = new OpenLayers.LonLat(lon_1, lat_1);
            vothC4_icon = new OpenLayers.Marker(vothC4);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothC4);
markers.addMarker(vothC4_icon);
    addMarker(vothC4, popupClass, "", true, false, false);
    map_id_vothC4.setCenter(vothC4, 4); 
        
});
