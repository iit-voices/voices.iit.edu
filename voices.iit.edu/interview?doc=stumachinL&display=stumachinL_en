    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothC4.addLayer(markers);
map_id_vothC4.zoomToMaxExtent();

                        var lat_1 = 50.033300;
                        var lon_1 = 19.233300;
                        var vothC4 = new OpenLayers.LonLat(lon_1, lat_1);
            vothC4_icon = new OpenLayers.Marker(vothC4);
            
