<script type="text/javascript">
var map, markers, options, popupClass;
var zoom = 3.0;

function addMarker(ll, popupClass, popupContentHTML, closeBox, overflow) {
    var feature = new OpenLayers.Feature(markers, ll); 
    feature.closeBox = closeBox;
    feature.popupClass = popupClass;
    feature.data.popupContentHTML = popupContentHTML;
    feature.data.overflow = (overflow) ? "auto" : "hidden";
    var marker = feature.createMarker();
    var markerClick = function (evt){
        if (this.popup == null){
            this.popup = this.createPopup(this.closeBox);
            map.addPopup(this.popup);
            this.popup.show();
            } else {
                this.popup.toggle();
            }
        currentPopup = this.popup;
        OpenLayers.Event.stop(evt);
    };
    marker.events.register("mousedown", feature, markerClick);
    markers.addMarker(marker);
}
$(document).ready(function(){
    map = new OpenLayers.Map('map');
    /* var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     ); */
    var gphy = new OpenLayers.Layer.Google(
                "Google Physical",
                {type: G_PHYSICAL_MAP}
            );
    map.addLayers([gphy]);
    markers = new OpenLayers.Layer.Markers("Markers");
    map.addLayer(markers);
    map.zoomToMaxExtent();
    var AutoSizeAnchored = OpenLayers.Class(
        OpenLayers.Popup.Anchored,
        {'autoSize': true}
    );
    popupClass = AutoSizeAnchored;
    new OpenLayers.StyleMap(
        {'fillColor': '#cc000',
         'cursor': 'pointer'
        }
    );
});
</script>
<script type="text/javascript">
var vothL2;
var vothL2_icon;
var vothL1;
var vothL1_icon;
var vothC110;
var vothC110_icon;
var vothL50;
var vothL50_icon;
$(document).ready(function(){
    bounds = new OpenLayers.Bounds();
                            var lat_1 = 48.583300;
                        var lon_1 = 16.583300;
                        vothL2 = new OpenLayers.LonLat(lon_1, lat_1);
            bounds.extend(vothL2);                        vothL2_icon = new OpenLayers.Marker(vothL2)
            markers.addMarker(vothL2_icon);
            var popupContentHTML = "";
                            popupContentHTML += '<p class="municipality"><a href="search_results?filter_by=&filter_value=vothL2">Mistelbach, Austria<br /></a></p>';
                        addMarker(vothL2, popupClass, popupContentHTML, true, true);
                                        var lat_2 = 48.216700;
                        var lon_2 = 16.366700;
                        vothL1 = new OpenLayers.LonLat(lon_2, lat_2);
                                    vothL1_icon = new OpenLayers.Marker(vothL1)
            markers.addMarker(vothL1_icon);
            var popupContentHTML = "";
                            popupContentHTML += '<p class="municipality"><a href="search_results?filter_by=&filter_value=vothL1">Wien, Austria<br /></a></p>';
                        addMarker(vothL1, popupClass, popupContentHTML, true, true);
                                                            var lat_4 = 50.500000;
                        var lon_4 = 14.150000;
                        vothL50 = new OpenLayers.LonLat(lon_4, lat_4);
                        bounds.extend(vothL50);            vothL50_icon = new OpenLayers.Marker(vothL50)
            markers.addMarker(vothL50_icon);
            var popupContentHTML = "";
                            popupContentHTML += '<p class="municipality"><a href="search_results?filter_by=&filter_value=vothL50">Terez&#195;n, Czechoslovakia<br /></a></p>';
                        addMarker(vothL50, popupClass, popupContentHTML, true, true);
                    
    map.setCenter(vothL1, 4);
});
