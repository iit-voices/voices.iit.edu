<script type="text/javascript">
var map, markers, options, popupClass;
var zoom = 3.0;

function addMarker(ll, popupClass, popupContentHTML, closeBox, overflow) {
    var feature = new OpenLayers.Feature(markers, ll); 
    feature.closeBox = closeBox;
    feature.popupClass = popupClass;
    feature.data.popupContentHTML = popupContentHTML;
    feature.data.overflow = (overflow) ? "auto" : "hidden";
    var marker = feature.createMarker();
    var markerClick = function (evt){
        if (this.popup == null){
            this.popup = this.createPopup(this.closeBox);
            map.addPopup(this.popup);
            this.popup.show();
            } else {
                this.popup.toggle();
            }
        currentPopup = this.popup;
        OpenLayers.Event.stop(evt);
    };
    marker.events.register("mousedown", feature, markerClick);
    markers.addMarker(marker);
}
$(document).ready(function(){
    map = new OpenLayers.Map('map');
    /* var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     ); */
    var gphy = new OpenLayers.Layer.Google(
                "Google Physical",
                {type: G_PHYSICAL_MAP}
            );
    map.addLayers([gphy]);
    markers = new OpenLayers.Layer.Markers("Markers");
    map.addLayer(markers);
    map.zoomToMaxExtent();
    var AutoSizeAnchored = OpenLayers.Class(
        OpenLayers.Popup.Anchored,
        {'autoSize': true}
    );
    popupClass = AutoSizeAnchored;
    new OpenLayers.StyleMap(
        {'fillColor': '#cc000',
         'cursor': 'pointer'
        }
    );
});
</script>
<script type="text/javascript">
$(document).ready(function(){
    bounds = new OpenLayers.Bounds();
        
    map.setCenter(, 4);
});
</script><script type="text/javascript">
$(document).ready(function(){
    $("#portable_player").click(function(){
        var window_location = "audio_popup?doc=richardA&name=Lt.+Andr%C3%A9+Richard+";
        var popup_options = "width=400,height=40,menubar=no,toolbar=no,status=1,resizable=no";
        newwindow = window.open(window_location, 'portable_audio', popup_options);
        if (window.focus) newwindow.focus();
        return false;
    });
});
</script>
