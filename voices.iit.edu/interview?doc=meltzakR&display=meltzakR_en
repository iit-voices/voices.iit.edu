         {layers: 'basic'}
     );
   map_id_vothL79.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL79.addLayer(markers);
map_id_vothL79.zoomToMaxExtent();

                        var lat_2 = 52.250000;
                        var lon_2 = 21.000000;
                        var vothL79 = new OpenLayers.LonLat(lon_2, lat_2);
            vothL79_icon = new OpenLayers.Marker(vothL79);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL79);
markers.addMarker(vothL79_icon);
    addMarker(vothL79, popupClass, "", true, false, false);
    map_id_vothL79.setCenter(vothL79, 4); 
        
});
</script>
</div>
