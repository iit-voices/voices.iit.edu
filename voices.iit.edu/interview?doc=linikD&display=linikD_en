     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL369.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL369.addLayer(markers);
map_id_vothL369.zoomToMaxExtent();

                        var lat_6 = 40.016667;
                        var lon_6 = 52.966667;
                        var vothL369 = new OpenLayers.LonLat(lon_6, lat_6);
            vothL369_icon = new OpenLayers.Marker(vothL369);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL369);
markers.addMarker(vothL369_icon);
    addMarker(vothL369, popupClass, "", true, false, false);
    map_id_vothL369.setCenter(vothL369, 4); 
        
});
</script>
