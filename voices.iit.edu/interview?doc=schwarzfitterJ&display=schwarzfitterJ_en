     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL87.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL87.addLayer(markers);
map_id_vothL87.zoomToMaxExtent();

                        var lat_8 = 50.300000;
                        var lon_8 = 19.550000;
                        var vothL87 = new OpenLayers.LonLat(lon_8, lat_8);
            vothL87_icon = new OpenLayers.Marker(vothL87);
            
