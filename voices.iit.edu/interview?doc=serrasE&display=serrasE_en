         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothC18.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothC18.addLayer(markers);
map_id_vothC18.zoomToMaxExtent();

                        var lat_4 = 50.033300;
                        var lon_4 = 19.233300;
                        var vothC18 = new OpenLayers.LonLat(lon_4, lat_4);
            vothC18_icon = new OpenLayers.Marker(vothC18);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothC18);
markers.addMarker(vothC18_icon);
    addMarker(vothC18, popupClass, "", true, false, false);
    map_id_vothC18.setCenter(vothC18, 4); 
        
});
</script>
