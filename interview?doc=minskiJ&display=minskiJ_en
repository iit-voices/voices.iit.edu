/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothC65.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothC65.addLayer(markers);
map_id_vothC65.zoomToMaxExtent();

                        var lat_1 = 51.816700;
                        var lon_1 = 19.466700;
                        var vothC65 = new OpenLayers.LonLat(lon_1, lat_1);
            vothC65_icon = new OpenLayers.Marker(vothC65);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothC65);
markers.addMarker(vothC65_icon);
    addMarker(vothC65, popupClass, "", true, false, false);
    map_id_vothC65.setCenter(vothC65, 4); 
        
});
</script>
