         {layers: 'basic'}
     );
   map_id_vothL148.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL148.addLayer(markers);
map_id_vothL148.zoomToMaxExtent();

                        var lat_3 = 59.433000;
                        var lon_3 = 24.728000;
                        var vothL148 = new OpenLayers.LonLat(lon_3, lat_3);
            vothL148_icon = new OpenLayers.Marker(vothL148);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL148);
markers.addMarker(vothL148_icon);
    addMarker(vothL148, popupClass, "", true, false, false);
    map_id_vothL148.setCenter(vothL148, 4); 
        
});
</script>
</div>
