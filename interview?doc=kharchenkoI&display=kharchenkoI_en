                                <div class="map widget vothL361">
    <p>
        <b>
            <a href="#close" class="hide">
                [x] click to close
            </a>
        </b>
    </p>
    <div id="map_vothL361" style="width: 250px; height: 250px;"></div>
            <p class="municipality">
            Moskva, Russia
            <br />
                    </p>
    <style type="text/css">
.olLayerDiv{
width:250px !important;
height:250px !important;
}
</style>
<script type="text/javascript">
$(document).ready(function(){
    var map_id_vothL361 = new OpenLayers.Map('map_vothL361', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL361.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL361.addLayer(markers);
map_id_vothL361.zoomToMaxExtent();

                        var lat_7 = 55.750000;
                        var lon_7 = 37.700000;
                        var vothL361 = new OpenLayers.LonLat(lon_7, lat_7);
            vothL361_icon = new OpenLayers.Marker(vothL361);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL361);
markers.addMarker(vothL361_icon);
    addMarker(vothL361, popupClass, "", true, false, false);
    map_id_vothL361.setCenter(vothL361, 4); 
        
});
</script>
</div>
