         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL76.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL76.addLayer(markers);
map_id_vothL76.zoomToMaxExtent();

                        var lat_7 = 54.866700;
                        var lon_7 = 23.916700;
                        var vothL76 = new OpenLayers.LonLat(lon_7, lat_7);
            vothL76_icon = new OpenLayers.Marker(vothL76);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL76);
markers.addMarker(vothL76_icon);
    addMarker(vothL76, popupClass, "", true, false, false);
    map_id_vothL76.setCenter(vothL76, 4); 
        
});
</script>
</div>
