                        var lat_7 = 46.216700;
                        var lon_7 = 6.150000;
                        var vothL117 = new OpenLayers.LonLat(lon_7, lat_7);
            vothL117_icon = new OpenLayers.Marker(vothL117);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL117);
markers.addMarker(vothL117_icon);
    addMarker(vothL117, popupClass, "", true, false, false);
    map_id_vothL117.setCenter(vothL117, 4); 
        
});
</script>
