/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL19.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL19.addLayer(markers);
map_id_vothL19.zoomToMaxExtent();

                        var lat_16 = 49.200000;
                        var lon_16 = 2.050000;
                        var vothL19 = new OpenLayers.LonLat(lon_16, lat_16);
            vothL19_icon = new OpenLayers.Marker(vothL19);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL19);
markers.addMarker(vothL19_icon);
    addMarker(vothL19, popupClass, "", true, false, false);
    map_id_vothL19.setCenter(vothL19, 4); 
        
});
</script>
</div>
