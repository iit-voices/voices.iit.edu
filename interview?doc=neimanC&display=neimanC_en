 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL547.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL547.addLayer(markers);
map_id_vothL547.zoomToMaxExtent();

                        var lat_9 = 53.166700;
                        var lon_9 = 50.166700;
                        var vothL547 = new OpenLayers.LonLat(lon_9, lat_9);
            vothL547_icon = new OpenLayers.Marker(vothL547);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL547);
markers.addMarker(vothL547_icon);
    addMarker(vothL547, popupClass, "", true, false, false);
    map_id_vothL547.setCenter(vothL547, 4); 
        
});
</script>
</div>
