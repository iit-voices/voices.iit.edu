    <script src="http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=false&amp;key=ABQIAAAA0xyVCvO7IKnAExY22l2QehS836YHSNG4g_xIZj9BM1cpeYlJVRQqsoC14ZLUkgxCP8ed-GNYCy6Hxg" type="text/javascript"></script>
<script type="text/javascript" src="http://openlayers.org/api/OpenLayers.js"></script>

    <script type="text/javascript">
    var map, markers, options, popupClass;
    var zoom = 3.0;

    function addMarker(ll, popupClass, popupContentHTML, closeBox, overflow) {
        var feature = new OpenLayers.Feature(markers, ll); 
        feature.closeBox = closeBox;
        feature.popupClass = popupClass;
        feature.data.popupContentHTML = popupContentHTML;
        feature.data.overflow = (overflow) ? "auto" : "hidden";
        var marker = feature.createMarker();
        var markerClick = function (evt){
            if (this.popup == null){
                this.popup = this.createPopup(this.closeBox);
                map.addPopup(this.popup);
                this.popup.show();
                } else {
                    this.popup.toggle();
                }
            currentPopup = this.popup;
            OpenLayers.Event.stop(evt);
        };
        marker.events.register("mousedown", feature, markerClick);
        markers.addMarker(marker);
    }
    var selected;
    $(document).ready(function(){
        $(".map").hide();
        $(".terms h3").hide();
        $(".terms li").each(function(i, elem){
            $(elem).hide();
        });
        $("a.placename").each(function(i, elem){
            $(elem).click(function(){
                var marker_ref = $(this).attr("href").replace('#', '');
                $("." + marker_ref).show().css({
                    "top": $(elem).offset().top,
                    "left": $(elem).offset().left,
                    "position": "absolute",
                    "background": "#d3baa8"
                });
                return false;
            });
        });
        $("a.term").each(function(i, elem){
            $(elem).click(function(){
                $("." + selected).hide();
                selected = String($(elem).attr("href").replace('#', ''));
                $(".terms").show();
                $("." + selected).show().css({
                    "top":  $(elem).offset().top,
                    "left": $(elem).offset().left,
                    "width": "300px",
                    "position": "absolute",
                    "background": "#d3baa8",
                    "border": "1px solid #aaa",
                    "padding": "10px"
                });
                $(".terms p").show();  
                return false;
            });
        });
        $("#sidebar p b a.hide").click(function(){
            $("." + selected).hide();
            $(".terms h3").hide();
            $(".map").hide();
            $(".terms").hide();
        });
        $("sup a").each(function(i, elem){
            var selected_note;
            $(this).click(function(e){
                $(".note_popup li.selected").hide().removeClass("selected");
                selected_note = $(".note_popup li.note_" + parseInt(i + 1));
                $(selected_note).css({
                    "top": e.pageY,
                    "left": e.pageX,
                    "display": "block",
                    "zIndex": "9999",
                    "position": "absolute",
                    "width": "300px",
                    "background": "#d3baa8",
                    "border": "1px solid #aaa",
                    "padding": "10px"
                    
                }).addClass("selected");
                return false;
            });
            $(".note_popup a.hide").click(function(){
                $(".note_popup li").hide();
                return false;
            });
        });
    });
    </script>
