     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL435.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL435.addLayer(markers);
map_id_vothL435.zoomToMaxExtent();

                        var lat_21 = 50.683300;
                        var lon_21 = 14.000000;
                        var vothL435 = new OpenLayers.LonLat(lon_21, lat_21);
            vothL435_icon = new OpenLayers.Marker(vothL435);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL435);
markers.addMarker(vothL435_icon);
    addMarker(vothL435, popupClass, "", true, false, false);
    map_id_vothL435.setCenter(vothL435, 4); 
        
});
</script>
