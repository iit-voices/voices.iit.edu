               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL382.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL382.addLayer(markers);
map_id_vothL382.zoomToMaxExtent();

                        var lat_7 = 52.266667;
                        var lon_7 = 11.650000;
                        var vothL382 = new OpenLayers.LonLat(lon_7, lat_7);
            vothL382_icon = new OpenLayers.Marker(vothL382);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL382);
markers.addMarker(vothL382_icon);
    addMarker(vothL382, popupClass, "", true, false, false);
    map_id_vothL382.setCenter(vothL382, 4); 
        
});
</script>
</div>
                                <div class="map widget vothL66">
    <p>
        <b>
            <a href="#close" class="hide">
                [x] click to close
            </a>
        </b>
    </p>
    <div id="map_vothL66" style="width: 250px; height: 250px;"></div>
            <p class="municipality">
            Hillersleben, Germany
            <br />
                    </p>
    <style type="text/css">
.olLayerDiv{
width:250px !important;
height:250px !important;
}
</style>
<script type="text/javascript">
$(document).ready(function(){
    var map_id_vothL66 = new OpenLayers.Map('map_vothL66', {controls: []});
/*    gphy = new OpenLayers.Layer.Google(
                  "Google Physical",
                  {type: G_PHYSICAL_MAP,
                  'sphericalMercator': true,
     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL66.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL66.addLayer(markers);
map_id_vothL66.zoomToMaxExtent();

                        var lat_8 = 52.266667;
                        var lon_8 = 11.483056;
                        var vothL66 = new OpenLayers.LonLat(lon_8, lat_8);
            vothL66_icon = new OpenLayers.Marker(vothL66);
            
