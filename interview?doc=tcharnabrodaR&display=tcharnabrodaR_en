     'maxExtent': new OpenLayers.Bounds(-20037508.34,-20037508.34,20037508.34,20037508.34)
}
               );
*/
 var ol_wms = new OpenLayers.Layer.WMS(
         "OpenLayers WMS",
         "http://labs.metacarta.com/wms/vmap0",
         {layers: 'basic'}
     );
   map_id_vothL442.addLayer(ol_wms);
    markers = new OpenLayers.Layer.Markers("Markers");
    map_id_vothL442.addLayer(markers);
map_id_vothL442.zoomToMaxExtent();

                        var lat_18 = 49.948056;
                        var lon_18 = 11.578333;
                        var vothL442 = new OpenLayers.LonLat(lon_18, lat_18);
            vothL442_icon = new OpenLayers.Marker(vothL442);
            
var bounds = new OpenLayers.Bounds();
bounds.extend(vothL442);
markers.addMarker(vothL442_icon);
    addMarker(vothL442, popupClass, "", true, false, false);
    map_id_vothL442.setCenter(vothL442, 4); 
        
});
</script>
</div>
                                <div class="map widget vothL243">
